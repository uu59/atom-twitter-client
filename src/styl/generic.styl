html,body
  padding: 0
  margin 0

body
  color #666
  font-size small
  background-color: #f8f7f1
  *
    letter-spacing: normal; // fix strange rendering

em
  font-style: normal

a
  color #9EBE77

clearfix()
  zoom: 1
  &:before, &:after
    content " "
    display table
  &:after
    clear both

