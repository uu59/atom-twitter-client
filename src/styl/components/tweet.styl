.tweet
  padding 1ex 0
  display table
  width 100%
  border-bottom 1px solid #f0f0f0
  .tweet__userimage
    img
      width 32px
      height 32px
  .tweet__media
    max-width 160px
    max-height 160px
    display inline-block
    padding-right 1ex
  .tweet__protectedIcon
    font-size: 9px
    color: #666
  .tweet__userimage
    display table-cell
    width 36px
  .tweetBody
    display table-cell
    vertical-align top
    word-break: break-word
    &__head
      padding 0
      margin 0
    &__body
      padding 0 0 0.5ex 0
      margin 0
    &__timestamp
      float: right
      font-family: monospace
      subtle-link()
    &__userName
      padding-left: 1ex
    &__screenName
      clickable()
    &__source
      a
        subtle-link()
    &__social
      color: #998
      > em
        padding-right: 1ex
    &__showConversation
      padding-right 1em
      clickable()
      .el
        color #000
  .tweet__retweet
    img
      width: 16px
      height: 16px

.tweet--selected
  @extend .tweet
  background-color #e9e9e9
