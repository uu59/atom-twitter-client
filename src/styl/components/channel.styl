.container--channels
  background-color #efede0
  padding: 0 1em
  .channel--current
    color: #000
    font-weight bold
  .channels
    > *
      margin-bottom 2em
    h1
      margin 0
      padding 0
      font-size: 110%
      clickable()
      &:hover
        color: #000
    p
      cursor: pointer
      margin: 0
      padding: 0.5ex 0
      &:hover
        color: #793
    .el
      color: #888
    &__searches
      form
        margin: 0
        padding: 1ex 0
    &__searches, &__userTimelines
      p
        display table
        width 100%
        span, .el
          display table-cell
        .el
          text-align: right
          vertical-align: middle
          width 2em
          height 2em
          font-size 0.7em
          &:hover
            color: #943
