.container--channels
  background-color #efede0
  padding: 0 1em
  .channel
    h1
      margin 0
      padding 0
      font-size: 110%
    > *
      margin-bottom 2em
    > * > *
      margin: 0
      padding: 1ex 0
    p
      cursor: pointer
      padding: 0.5ex 0
      &:hover
        color: #793
    &__searches
      p
        display table
        width 100%
        span, .el
          display table-cell
        .el
          text-align: right
          vertical-align: middle
          width 2em
          height 2em
          font-size 0.7em
          &:hover
            color: #943
